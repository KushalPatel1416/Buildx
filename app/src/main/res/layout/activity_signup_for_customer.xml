<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6000000"
    tools:context=".Signup_for_Customer">

    <TextView
        android:layout_width="127dp"
        android:layout_height="20dp"
        android:text="Customer details"
        android:textColor="#FDFAFA"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:fontFamily="@font/russo_one"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="#A80A5EB8"
        android:textSize="45sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.041" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="middle"
        android:fontFamily="@font/russo_one"
        android:text="Sign Up"
        android:textAlignment="center"
        android:textColor="#EDF1F0F0"
        android:textSize="45sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.031" />

    <androidx.cardview.widget.CardView
        android:layout_width="377dp"
        android:layout_height="639dp"
        android:backgroundTint="#D0FDFCFC"
        android:backgroundTintMode="add"
        app:cardBackgroundColor="#D0FDFCFC"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.78">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.1"
            app:srcCompat="@drawable/bg_signup"
            />


        <LinearLayout
            android:layout_width="327dp"
            android:layout_height="539dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.6">


            <EditText
                android:id="@+id/Customername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:drawableStart="@drawable/ic_baseline_person"
                android:drawablePadding="6dp"
                android:ems="10"
                android:hint="Enter Your Full Name"
                android:inputType="textPersonName"
                android:minHeight="55dp"
                android:textColorHint="#100F0F">

            </EditText>

            <EditText
                android:id="@+id/cEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="6dp"
                android:ems="10"
                android:hint="Enter Your Email"
                android:inputType="textPersonName"
                android:minHeight="55dp"
                android:textColorHint="#100F0F">

            </EditText>

            <EditText
                android:id="@+id/cDOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_baseline_calendar_month_24"
                android:drawablePadding="6dp"
                android:hint="Enter Your Date of Birth"
                android:maxLength="10"
                android:inputType="textPersonName"
                android:minHeight="55dp"
                android:textColorHint="#100F0F">

            </EditText>

            <EditText
                android:id="@+id/cContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_baseline_phone_24"
                android:drawablePadding="6dp"
                android:ems="10"
                android:maxLength="10"
                android:hint="Enter Your Contact no."
                android:inputType="number"
                android:digits="0123456789"
                android:minHeight="55dp"
                android:textColorHint="#100F0F">

            </EditText>

            <EditText
                android:id="@+id/cAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_baseline_home_work_24"
                android:drawablePadding="6dp"
                android:ems="10"
                android:hint="Enter Your Full Address"
                android:inputType="textPersonName"
                android:minHeight="55dp"
                android:textColorHint="#100F0F">

            </EditText>

            <EditText
                android:id="@+id/cpassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="6dp"
                android:ems="10"
                android:hint="Enter Your Password"
                android:inputType="textPersonName"
                android:minHeight="55dp"
                android:textColorHint="#100F0F">

            </EditText>

            <EditText
                android:id="@+id/cpassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="6dp"
                android:ems="10"
                android:hint="Enter Password Again"
                android:inputType="textPassword"
                android:minHeight="55dp"
                android:textColorHint="#0C0B0B" />

            <Button
                android:id="@+id/csignupbtn"
                android:layout_width="236dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_bg"
                android:backgroundTint="#085CB5"
                android:minHeight="48dp"
                android:text="Signup"
                android:textColor="#ffffff"
                tools:ignore="TouchTargetSizeCheck" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>