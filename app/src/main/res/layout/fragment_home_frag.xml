<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home_frag"
    android:background="@drawable/construction_bg2"
    >


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_home"
        android:alpha="0.1"
        android:layout_marginBottom="250dp"/>


    <ImageView
        android:layout_width="42dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="325dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="250dp"
        android:src="@drawable/bg_home" />

    <TextView
        android:layout_width="216dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="176dp"
        android:layout_marginBottom="755dp"
        android:text="Hello, Customer"
        android:textColor="#B4000000"
        android:textSize="24dp" />


    <TextView
        android:id="@+id/Material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="65dp"
        android:layout_marginBottom="688dp"
        android:fontFamily="@font/be_vietnam"
        android:text="Building Materials"
        android:textColor="#C642A5F5"
        android:textSize="30dp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="122dp"
        app:cardUseCompatPadding="true"
       >

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         >

         <androidx.cardview.widget.CardView
             android:id="@+id/Steel"
             android:layout_width="177dp"
             android:layout_height="154dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="5dp"
             app:cardBackgroundColor="#ffffff"
             app:cardCornerRadius="12dp">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/steel"
                 android:scaleY="1.4"
                 android:scaleX="1.2"
                 android:layout_marginLeft="10dp"
                 />

             <TextView
                 android:layout_width="67dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="55dp"
                 android:layout_marginStart="10dp"
                 android:fontFamily="@font/be_vietnam"
                 android:text="Steel"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:textStyle="bold" />


         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/Cement"
             android:layout_width="177dp"
             android:layout_height="154dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="200dp"
             android:layout_marginBottom="5dp"
             app:cardBackgroundColor="#ffffff"
             app:cardCornerRadius="12dp">

             <ImageView
                 android:layout_width="213dp"
                 android:layout_height="132dp"
                 android:layout_marginLeft="0dp"
                 android:layout_marginBottom="20dp"
                 android:layout_gravity="center"
                 android:layout_marginTop="30dp"
                 android:src="@drawable/cement" />

             <TextView
                 android:layout_width="94dp"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="10dp"
                 android:layout_marginLeft="55dp"
                 android:fontFamily="@font/be_vietnam"
                 android:text="Cement"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:textStyle="bold" />


         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/Bricks"
             android:layout_width="177dp"
             android:layout_height="154dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="380dp"
             android:layout_marginBottom="5dp"
             app:cardBackgroundColor="#ffffff"
             app:cardCornerRadius="12dp">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="163dp"
                 android:scaleY="1.5"
                 android:src="@drawable/bricks" />

             <TextView
                 android:layout_width="67dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="55dp"
                 android:layout_marginStart="10dp"
                 android:fontFamily="@font/be_vietnam"
                 android:text="Bricks"
                 android:textColor="@color/white"
                 android:textSize="20dp"
                 android:textStyle="bold" />


         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/Steel4"
             android:layout_width="177dp"
             android:layout_height="154dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="10dp"
             android:layout_marginTop="560dp"
             android:layout_marginBottom="5dp"
             app:cardBackgroundColor="#ffffff"
             android:visibility="gone"
             app:cardCornerRadius="12dp">

             <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/steel"
                 android:layout_marginTop="45dp"
                 android:layout_marginLeft="10dp"
                 />

             <TextView
                 android:layout_width="67dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="55dp"
                 android:layout_marginStart="10dp"
                 android:fontFamily="@font/be_vietnam"
                 android:text="Steel"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:textStyle="bold" />


         </androidx.cardview.widget.CardView>


         <androidx.cardview.widget.CardView
             android:id="@+id/Wood"
             android:layout_width="177dp"
             android:layout_height="154dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="225dp"
             android:layout_marginTop="20dp"
             android:layout_marginBottom="5dp"
             app:cardBackgroundColor="#ffffff"
             app:cardCornerRadius="12dp">

             <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:scaleType="fitXY"
                 android:layout_marginTop="0dp"
                 android:src="@drawable/wood22" />

             <TextView
                 android:layout_width="67dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="55dp"
                 android:layout_marginStart="10dp"
                 android:fontFamily="@font/be_vietnam"
                 android:text="Woods"
                 android:textColor="@color/white"
                 android:textSize="20dp"
                 android:textStyle="bold" />


         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/Aggregate"
             android:layout_width="177dp"
             android:layout_height="154dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="225dp"
             android:layout_marginTop="200dp"
             android:layout_marginBottom="5dp"
             app:cardBackgroundColor="#ffffff"
             app:cardCornerRadius="12dp">

             <ImageView
                 android:layout_width="201dp"
                 android:layout_height="185dp"
                 android:layout_marginTop="4dp"
                 android:scaleX="1.3"
                 android:scaleY="2"
                 android:src="@drawable/stones" />

             <TextView
                 android:layout_width="112dp"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="10dp"
                 android:layout_marginLeft="55dp"
                 android:fontFamily="@font/be_vietnam"
                 android:text="Aggregate"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:textStyle="bold" />


         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/Sand"
             android:layout_width="177dp"
             android:layout_height="154dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="225dp"
             android:layout_marginTop="380dp"
             android:layout_marginBottom="5dp"
             app:cardBackgroundColor="#ffffff"
             app:cardCornerRadius="12dp">

             <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_marginTop="0dp"
                 android:scaleType="fitXY"
                 android:src="@drawable/sand" />

             <TextView
                 android:layout_width="67dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="55dp"
                 android:layout_marginStart="10dp"
                 android:fontFamily="@font/be_vietnam"
                 android:text="Sand"
                 android:textColor="@color/white"
                 android:textSize="20dp"
                 android:textStyle="bold" />


         </androidx.cardview.widget.CardView>

         <androidx.cardview.widget.CardView
             android:id="@+id/Wood4"
             android:layout_width="177dp"
             android:layout_height="154dp"
             android:layout_alignParentTop="true"
             android:layout_marginLeft="225dp"
             android:layout_marginTop="560dp"
             android:layout_marginBottom="5dp"
             app:cardBackgroundColor="#ffffff"
             android:visibility="gone"
             app:cardCornerRadius="12dp">

             <ImageView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:scaleType="fitXY"
                 android:layout_marginTop="40dp"
                 android:src="@drawable/wood2" />

             <TextView
                 android:layout_width="67dp"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="55dp"
                 android:layout_marginStart="10dp"
                 android:fontFamily="@font/be_vietnam"
                 android:text="Wood"
                 android:textColor="@color/black"
                 android:textSize="20dp"
                 android:textStyle="bold" />


         </androidx.cardview.widget.CardView>


     </RelativeLayout>



    </ScrollView>


</RelativeLayout>
